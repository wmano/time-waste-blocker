{
    "name": "Zeitverschwendungsverbesserer ",
    "description": "detect a URL change in a tab, and inject a script to the page!",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_title": "Zeitverschwendungsverbesserer"
    },

    "manifest_version": 3,
    "permissions": [
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "service_worker": "background.js"
    }
}